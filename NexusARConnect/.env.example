# Fichier de configuration d'environnement pour Nexus AR Connect
# Copiez ce fichier en .env et modifiez les valeurs selon votre configuration

# Configuration de l'application
NODE_ENV=development
PORT=3000
HOST=localhost
APP_URL=http://localhost:3000
APP_NAME="Nexus AR Connect"
APP_DESCRIPTION="Transformez les codes QR en portails de réalité augmentée"
APP_VERSION=1.0.0

# Configuration de la base de données (si nécessaire)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=nexus_ar
# DB_USER=postgres
# DB_PASSWORD=your_secure_password

# Clés API (à remplir en production)
GOOGLE_API_KEY=your_google_api_key
MAPBOX_ACCESS_TOKEN=your_mapbox_token

# Configuration du cache
CACHE_ENABLED=true
CACHE_TTL=3600

# Configuration des logs
LOG_LEVEL=debug
LOG_TO_FILE=true
LOG_FILE_PATH=logs/app.log

# Configuration de la sécurité
SESSION_SECRET=your_session_secret
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=24h
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Configuration des e-mails (si nécessaire)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=user@example.com
# SMTP_PASS=your_email_password
# EMAIL_FROM=noreply@example.com
# EMAIL_NAME="Nexus AR Connect"

# Configuration du stockage
STORAGE_DRIVER=local
# STORAGE_DRIVER=s3
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=your-bucket-name

# Configuration du mode maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="Notre application est actuellement en maintenance. Veuillez réessayer plus tard."

# Configuration des fonctionnalités expérimentales
FEATURE_OFFLINE_MODE=true
FEATURE_ANALYTICS=false
FEATURE_NOTIFICATIONS=true

# Configuration des services externes
SENTRY_DSN=your_sentry_dsn
GOOGLE_ANALYTICS_ID=UA-XXXXX-Y

# Configuration AR
AR_ENGINE=arjs
AR_DEBUG=false
AR_DETECTION_MODE=color_and_matrix
AR_MATRIX_CODE_TYPE=3x3

# Configuration des métadonnées PWA
THEME_COLOR=#6e44ff
BACKGROUND_COLOR=#0a0e23
DISPLAY=standalone
ORIENTATION=portrait-primary

# Configuration du déploiement
BUILD_TARGET=web
BUILD_PATH=dist
PUBLIC_URL=/
GENERATE_SOURCEMAP=true

# Configuration des tests
TEST_ENV=test
TEST_DB_NAME=nexus_ar_test
TEST_DB_HOST=localhost
TEST_DB_PORT=5432

# Configuration du développement
DEBUG=true
ESLINT_NO_DEV_ERRORS=true
TSC_COMPILE_ON_ERROR=true
FAST_REFRESH=true

# Configuration du linter
EXTEND_ESLINT=true
ESLINT_NO_DEV_ERRORS=true
ESLINT_IGNORE_PATTERN=**/*

# Configuration des tests
CI=false
WATCH_TESTS=false
TEST_COVERAGE=false
TEST_WATCH=false

# Configuration du build
GENERATE_SOURCEMAP=true
INLINE_RUNTIME_CHUNK=false
IMAGE_INLINE_SIZE_LIMIT=10000

# Configuration du proxy (si nécessaire)
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=http://proxy.example.com:8080
# NO_PROXY=localhost,127.0.0.1,::1

# Configuration spécifique aux environnements
REACT_APP_ENV=development
REACT_APP_API_URL=http://localhost:3000/api
REACT_APP_GA_TRACKING_ID=UA-XXXXX-Y
REACT_APP_SENTRY_DSN=your_sentry_dsn

# Configuration des fonctionnalités avancées
ENABLE_WEB_COMPONENTS=true
ENABLE_SERVICE_WORKER=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_ANALYTICS=false

# Configuration du débogage
DEBUG=app:*,-app:verbose
DEBUG_COLORS=true
DEBUG_FD=1

# Configuration des métadonnées
META_DESCRIPTION="Transformez les codes QR en portails de réalité augmentée avec Nexus AR Connect"
META_KEYWORDS="réalité augmentée, QR code, portail, AR, Nexus, webxr, aframe"
META_AUTHOR="Votre Nom"
META_IMAGE=/images/og-image.jpg
